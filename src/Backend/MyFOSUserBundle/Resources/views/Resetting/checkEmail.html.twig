{% extends "PizoteArkAdminBundle::security.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
	<div class="login-wrap">    
	    <div class="panel bg-gray no-padding">        
	        <div class="panel-body">
				<p>
					{{ 'resetting.check_email'|trans({'%email%': email}) }}
				</p>

				<button type="button" onclick='document.location.href = "{{ path('fos_user_security_login')}}" ' class="btn btn-primary">{{ 'label_ok'|trans}}</button>

			</div>
		</div>
	</div>


{% endblock %}
