        <div class="header">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h3 class="header-title">{{ user.business.name }} <span class="minify">{{ user.business.geoState.name }}, {{ user.business.address }}</span> </h3>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-10" style="float: left;">
                        {{ include('BackendAdminBundle:Complex:sessionComplex.html.twig') }}
                    </div>

                    <div class="col-md-2" style="margin-top:-15px;float: right;" >

                        <div class="cuadrito-dashboard">
                            <div class="texto-d">
                                {{ arrStats["gxp"]["points"] }}<span class="minify"><b>GXP</b> {{ 'label_points'|trans }}</span>
                            </div>

                            <div style="text-align: center; color:#ccc;">
                                {{ 'dashboard.level'|trans }} {{ arrStats["gxp"]["level"] }}
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">

                <!-- widget div-->
