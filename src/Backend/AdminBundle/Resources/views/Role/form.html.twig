<style>
    .input-group {
        z-index: 0;
    }
</style>
<div class="container">
	<div class="row">	

		<div data-widget-editbutton="false" data-widget-colorbutton="false" id="wid-id-2" class="jarviswidget jarviswidget-sortable" style="" role="widget">

			<header class="header">
                            <h3 class="header-title">{{ 'label_form'|trans }}</h3>
                            <hr class="punteada"/>       
			</header>

			<!-- widget div-->
			<div role="content">				
				<!-- widget content -->
                            <div class="widget-body">

                                <div class="form-inputs-g">
                                    {{ form_start(form) }}
                                    {{ form_errors(form) }}
						
                                    <div class="row">
                                        <fieldset>
                                        
                                            <div class="col-md-6 col-md-offset-3 form-group">
                                                    {{ form_label(form.name) }}
                                                    {{ form_errors(form.name) }}
                                                    {{ form_widget(form.name, { 'attr': {'class' : 'form-control' } }
                                                    ) }}
                                            </div>							
                                            <div class="col-md-6 col-md-offset-3 form-group">
                                                    {{ form_label(form.nameES) }}
                                                    {{ form_errors(form.nameES) }}
                                                    {{ form_widget(form.nameES, { 'attr': {'class' : 'form-control' } }
                                                    ) }}
                                            </div>
                                            <div class="col-md-6 col-md-offset-3 form-group">
                                                    {{ form_label(form.endType) }}
                                                    {{ form_errors(form.endType) }}
                                                    {{ form_widget(form.endType, { 'attr': {'class' : 'form-control classic' } }
                                                    ) }}
                                            </div>

                                            <div class="hide">
                                                {{ form_rest(form) }}
                                            </div>

                                        </fieldset>
                                                                                        
                                        <div class="col-md-6 col-md-offset-3 form-group">
                                            <button type="submit" class="btn btn-primary btn-ps pull-right">{{ 'label_save'|trans }}</button>							
                                            <a  href="{{ path('backend_admin_role_index') }}" class="btn btn-primary button-cancel  btn-ps pull-right">{{ 'label_cancel'|trans }}</a>
                                        </div>                                            
                                    </div>
					<!--</form>-->
					{{ form_end(form) }}
                                </div>

                            </div>
				<!-- end widget content -->
			</div>
			<!-- end widget div -->
		</div>
	
</div>
</div>
<script type="text/javascript" language="Javascript">

	$( document ).ready(function() {


        $('[name="role"]').validate();
		$('[name="role"]').on("submit", function(){
			//Code: Action (like ajax...)
			if($("[name='role']").valid()){
				$('#pizote_spinner').show();
				return true;

			}
			else{
				return false;
			}

		});

	});


</script>