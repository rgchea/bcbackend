                        <a class="pull-right btn btn-primary btn-lg" href="{{ path('backend_admin_usernotification_new') }}">
                            {{ 'label_send_notification'|trans }}
                        </a>
                    </div>

            </div>
            <br/>
            <div class="row">
                <div class="col-md-6">
                    <h3 class="header-title">{{ 'label_menu.user_notification'|trans }}</h3>
                </div>

