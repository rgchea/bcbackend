                        </div>
                    </blockquote>
                </div>
            </div>
        </div>
    </div>


    <div class="container">


        <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
            <header>
                <h2> {{ 'label_menu.user_notification'|trans }}</h2>
            </header>

            <!-- widget div-->
            <div>

                <!-- widget edit box -->
                <div class="jarviswidget-editbox">
                    <!-- This area used as dropdown edit box -->

                </div>

                <!-- end widget edit box -->

                <!-- widget content -->
                <div class="widget-body no-padding">

                    <div class="widget-body-toolbar">

                    </div>

                    <table id="dt_table" class="table table-striped  table-hover">
                        <tfoot class="dt_tfoot">
                            <tr>
                                <th>ID</th>
                                <th>{{ 'label_title'|trans }}</th>
                                <th>{{ 'label_category'|trans }}</th>
                                <th>{{ 'label_complex_sector'|trans }}</th>
                                <th>{{ 'label_property'|trans }}</th>
                                <th style="width:200px">{{ 'label_sent'|trans }}</th>


                            </tr>
                        </tfoot>
                        <thead>
                            <tr>
                                {# sorting of properties based on query components #}
                                <th>ID</th>
                                <th>{{ 'label_title'|trans }}</th>
                                <th>{{ 'label_category'|trans }}</th>
                                <th>{{ 'label_complex_sector'|trans }}</th>
                                <th>{{ 'label_property'|trans }}</th>
                                <th>{{ 'label_sent'|trans }}</th>

                            </tr>

                        </thead>
                        <tbody></tbody>

                    </table>
                    {# display navigation #}

                </div>
                <!-- end widget content -->

            </div>
            <!-- end widget div -->
        </div>
    </div>
    <script type="text/javascript">

        var table;
        {% set myLocale = app.request.getLocale() %};

        function fetchData(){

            table  = $('#dt_table').DataTable({
                "columnDefs": [

                    // These are the column name variables that will be sent to the server
                    { "name": "id",   "targets": 0 },
                    { "name": "title",   "targets": 1 },
                    { "name": "category",   "targets": 2 },
                    { "name": "sector",   "targets": 3 },
                    { "name": "property",   "targets": 4 },
                    { "name": "sent",  "targets": 5 },


                ],
                // Server-side parameters
                "processing": true,
                "serverSide": true,
                // Ajax call
                "ajax": {
                    "url": "{{ path('usernotification_list_datatables') }}",
                    "type": "POST",
                    //dataType: "html"
                },
                // Classic DataTables parameters
                "paging" : true,
                "info" : true,
                "searching": true,
                "pageLength": 10,
                "order": [[1, 'asc']],
                {% if myLocale == 'es' %}
                "language": {
                    "url": "{{ asset('bundles/pizotearkadmin/js/plugin/datatables/dataTables.spanish.lang') }}"
                }
                {% else %}
                "language": {
                    "infoFiltered": ""
                }
                {% endif %}



            });

        }

        $(document).ready(function(){

            // Add a text input to each footer cell
            var pos = 1;
            $('#dt_table tfoot th').each( function () {
                var title = $(this).text();
                if(pos != 6){//columna Actions
                    $(this).html( "<input id='input" + pos + "' type='text' class='form-control' style='font-family:Arial, FontAwesome; width:100%'/>" );
                }

                pos ++;
            });


            fetchData();

            // Apply the search
            pos = 1;
            table.columns().every( function () {
                var that = this;

                $("#input"+pos).on( 'keyup change', function () {
                    if ( that.search() !== this.value )
                    {
                        that.search( this.value ).draw();
                    }
                });
                pos++;
            });


        });

    </script>


