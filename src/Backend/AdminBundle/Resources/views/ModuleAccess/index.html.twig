										{#<td><b>{{ module.moduleName }}</b></td>#}
										<td><b>{{ module.translation_label|trans }}</b></td>
										{#<td colspan="{{entitiesRole|length}}">&nbsp;</td>#}
										{% for role in entitiesRole %}

											{% set checked = false %}
											{% for access in entitiesAccess %}
												{% if access.role.id == role.id and access.module.id == module.moduleID %}
													{% set checked = true %}
												{% endif %}
											{% endfor %}
											<td>
												<div class="checkbox">
													<label>
														<input name="{{role.id}}_{{module.moduleID}}" type="checkbox" {% if checked %}{{ 'checked="checked"' }}{% endif %}/>
													</label>
												</div>
											</td>

										{% endfor %}

									</tr>

									{% for submenu in module %}
										{% if submenu is iterable %}
											<tr>
												{#<td><b style="margin-left:3em" >{{ submenu.moduleName }}</b></td>#}
												<td><b style="margin-left:3em" >{{ submenu.translation_label|trans }}</b></td>

												{% for role in entitiesRole %}
													{% set checked = false %}
													{% for access in entitiesAccess %}
														{% if access.role.id == role.id and access.module.id == submenu.moduleID %}
															{% set checked = true %}
														{% endif %}
													{% endfor %}
													<td>
														<div class="checkbox">
															<label>
																<input name="{{role.id}}_{{submenu.moduleID}}" type="checkbox" {% if checked %}{{ 'checked="checked"' }}{% endif %} />
															</label>
														</div>
													</td>
												{% endfor %}
											</tr>
										{% endif %}
									{% endfor %}

								{%else%}


								{% endif %}

						{% endfor %}


