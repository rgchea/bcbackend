	$( document ).ready(function() {
                
                $('[name="property_transaction_type"]').validate();
                $("#property_transaction_type_lastPaymentDay").rules("add", {required:false, min:1, max:31, digits:true});
                
		$('[name="property_transaction_type"]').on("submit", function(){
			//Code: Action (like ajax...)
                        
			if($("[name='property_transaction_type']").valid()){
				$('#pizote_spinner').show();
