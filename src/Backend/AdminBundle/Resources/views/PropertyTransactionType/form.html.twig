        </div>

    </fieldset>

        <div class="form-group col-md-6 col-md-offset-3">
            <button type="submit" class="btn btn-primary btn-ps pull-right">{{ 'label_save'|trans }}</button>             
            <a  href="{{ path('backend_admin_property_transaction_type_index') }}" class="btn btn-primary button-cancel btn-ps pull-right">{{ 'label_cancel'|trans }}</a>             
        </div>

                    <!--</form>-->
                    {{ form_end(form) }}
                    </div>

            </div>
            <!-- end widget content -->

    </div>			
</div>
