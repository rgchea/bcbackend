<style>
    .input-group {
        z-index: 0;
    }
</style>
<div class="container">
    <div data-widget-editbutton="false" data-widget-colorbutton="false" id="wid-id-2" class="jarviswidget jarviswidget-sortable" style="" role="widget">
        <div class="row">            
            <div class="col-xs-12">
                <h3 class="header-title">{{ 'label_form'|trans }}</h3>
                <hr class="punteada"/>
            </div>                                     
                        

                <!-- widget div-->
            <div class="col-xs-12">
                    <div class="widget-body">

                        <div class="form-inputs-g">
                                {{ form_start(form) }}
                                {{ form_errors(form) }}

                                <fieldset>

                                    <div class="form-group col-md-6 col-md-offset-3">
                                        {{ form_label(form.nameEN) }}
                                        {{ form_errors(form.nameEN) }}
                                        {{ form_widget(form.nameEN, { 'attr': {'class' : 'form-control' } }
                                        ) }}
                                    </div>


                                    <div class="form-group col-md-6 col-md-offset-3">
                                            {{ form_label(form.nameES) }}
                                            {{ form_errors(form.nameES) }}
                                            {{ form_widget(form.nameES, { 'attr': {'class' : 'form-control' } }
                                            ) }}
                                    </div>

                                    <div class="form-group col-md-6 col-md-offset-3">
                                            {{ form_label(form.descriptionEN) }}
                                            {{ form_errors(form.descriptionEN) }}
                                            {{ form_widget(form.descriptionEN, { 'attr': {'class' : 'form-control' } }
                                            ) }}
                                    </div>
                                    <div class="form-group col-md-6 col-md-offset-3">
                                            {{ form_label(form.descriptionES) }}
                                            {{ form_errors(form.descriptionES) }}
                                            {{ form_widget(form.descriptionES, { 'attr': {'class' : 'form-control' } }
                                            ) }}
                                    </div>

                                    <div class="hide">
                                        {{ form_rest(form) }}
                                    </div>

                                </fieldset>
                                
                                <div class="form-group col-md-6 col-md-offset-3">
                                    <br>
                                    <button type="submit" class="btn btn-primary btn-ps pull-right">{{ 'label_save'|trans }}</button>                                            
                                    <a  href="{{ path('backend_admin_complex_sector_type_index') }}" class="btn btn-primary button-cancel btn-ps pull-right">{{ 'label_cancel'|trans }}</a>                                            
                                </div>

                            <!--</form>-->
                            {{ form_end(form) }}
                            </div>

                    </div>
                    <!-- end widget content -->

            </div>                
        </div>
    </div>
</div>

<script type="text/javascript" language="Javascript">

	$( document ).ready(function() {
                $('[name="complex_sector_type"]').validate();
		$('[name="complex_sector_type"]').on("submit", function(){
			//Code: Action (like ajax...)
			if($("[name='complex_sector_type']").valid()){
				$('#pizote_spinner').show();
				return true;

			}
			else{
				return false;
			}

		});

	});


</script>