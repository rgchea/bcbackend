<style>
    .input-group {
        z-index: 0;
    }
</style>

<div class="row">
	<article class="col-sm-12 col-md-12 col-lg-12 sortable-grid ui-sortable">

		<div data-widget-editbutton="false" data-widget-colorbutton="false" id="wid-id-2" class="jarviswidget jarviswidget-sortable" style="" role="widget">

			<header role="heading">
				<h2>{{ 'label_form'|trans }}</h2>

			</header>

			<!-- widget div-->
			<div role="content">

				<!-- widget edit box -->
				<div class="jarviswidget-editbox">
					<!-- This area used as dropdown edit box -->

				</div>
				<!-- end widget edit box -->

				<!-- widget content -->
				<div class="widget-body">
					<div class="form-inputs-g">

					{#<form id="backend_adminbundle_agreement_plan" action="{{path('backend_admin_agreement_plan_create')}}" method="POST" name="backend_adminbundle_agreement_plan">#}
                    {{ form_start(form) }}
                    {{ form_errors(form) }}

						<fieldset>

                         <div class="form-group col-md-6">
                            {{ form_label(form.fee) }}
                            {{ form_errors(form.fee) }}
                            {{ form_widget(form.fee, { 'attr': {'class' : 'form-control' } }
                            ) }}
                        </div>
						<div class="clearfix"></div>
                         <div class="form-group col-md-6">
                            {{ form_label(form.propertyLimitFrom) }}
                            {{ form_errors(form.propertyLimitFrom) }}
                            {{ form_widget(form.propertyLimitFrom, { 'attr': {'class' : 'form-control' } }
                            ) }}
                        </div>
                         <div class="form-group col-md-6">
                            {{ form_label(form.propertyLimitTo) }}
                            {{ form_errors(form.propertyLimitTo) }}
                            {{ form_widget(form.propertyLimitTo, { 'attr': {'class' : 'form-control' } }
                            ) }}
                        </div>


							<div class="hide">
                            {{ form_rest(form) }}
                        </div>

						</fieldset>

						<div class="form-actions">

							<button class="btn btn-primary">
								<i class="fa fa-save"></i>
								{{ 'label_save'|trans  }}
							</button>
						</div>

					<!--</form>-->
					{{ form_end(form) }}					
					</div>
				</div>
				<!-- end widget content -->

			</div>
			<!-- end widget div -->

		</div>

		<div class="clearfix"></div>

	</article>
</div>

<script type="text/javascript" language="Javascript">

	$( document ).ready(function() {


        $('[name="agreement_plan"]').validate({
			success: function (error) {
				$("#pizote_spinner").show();
				return true;
			},
		});


		$("#agreement_plan_fee").rules("add", {required:true, digits:true, min: 1});
		$("#agreement_plan_propertyLimitFrom").rules("add", {required:true, digits:true});
		$("#agreement_plan_propertyLimitTo").rules("add", {required:true, digits:true});

