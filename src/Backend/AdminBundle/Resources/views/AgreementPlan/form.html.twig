<style>
    .input-group {
        z-index: 0;
    }
</style>

<div class="container">	

    <header class="header">
            <h3 class="header-title">{{ 'label_form'|trans }}</h3>
            <hr class="punteada"/>
    </header>
			
    <div role="content">

            <div class="widget-body">
                    <div class="form-inputs-g">

                    {#<form id="backend_adminbundle_agreement_plan" action="{{path('backend_admin_agreement_plan_create')}}" method="POST" name="backend_adminbundle_agreement_plan">#}
                    {{ form_start(form) }}
                    {{ form_errors(form) }}

                    <fieldset>

                             <div class="form-group col-md-6 col-md-offset-3">
                                    {{ form_label(form.fee) }} $
                                    {{ form_errors(form.fee) }}
                                    {{ form_widget(form.fee, { 'attr': {'class' : 'form-control' } }
                                    ) }}
                            </div>
                            <div class="form-group col-md-6 col-md-offset-3">
                                    {{ form_label(form.propertyLimitFrom) }}
                                    {{ form_errors(form.propertyLimitFrom) }}
                                    {{ form_widget(form.propertyLimitFrom, { 'attr': {'class' : 'form-control' } }
                                    ) }}
                            </div>
                             <div class="form-group col-md-6 col-md-offset-3">
                                    {{ form_label(form.propertyLimitTo) }}
                                    {{ form_errors(form.propertyLimitTo) }}
                                    {{ form_widget(form.propertyLimitTo, { 'attr': {'class' : 'form-control' } }
                                    ) }}
                            </div>


                            <div class="form-group col-md-6 col-md-offset-3">
                                {{ form_rest(form) }}
                            </div>

                    </fieldset>

                    <div class="form-group col-md-6 col-md-offset-3">
                        <br>
                        <button type="submit" class="btn btn-primary btn-ps pull-right">{{ 'label_save'|trans }}</button>
                        <a  href="{{ path('backend_admin_agreement_plan_index') }}" class="btn btn-primary button-cancel btn-ps pull-right">{{ 'label_cancel'|trans }}</a>                        
                    </div>

                    <!--</form>-->
                    {{ form_end(form) }}
                    </div>
            </div>
            <!-- end widget content -->

    </div>				
</div>
<script type="text/javascript" language="Javascript">

	$( document ).ready(function() {


        $('[name="agreement_plan"]').validate({
			success: function (error) {
				return true;
			},
		});


		$("#agreement_plan_fee").rules("add", {required:true, number:true, min: 0});
		$("#agreement_plan_propertyLimitFrom").rules("add", {required:true, digits:true});
		$("#agreement_plan_propertyLimitTo").rules("add", {required:true, digits:true});


		$('[name="agreement_plan"]').on("submit", function(){
			//Code: Action (like ajax...)
			if($("[name='agreement_plan']").valid()){
				$('#pizote_spinner').show();
				return true;

			}
			else{
				$('#pizote_spinner').hide();
				return false;
			}

		});



	});


</script>