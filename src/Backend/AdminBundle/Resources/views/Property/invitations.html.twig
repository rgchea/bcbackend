{% extends 'BackendAdminBundle::layout.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li> <a href="{{ path('backend_admin_property_index') }}">{{ 'label_menu.property'|trans  }}</a> </li>
    <li> <a href="{{ path('backend_admin_property_invitations') }}">{{ 'label_import_properties'|trans  }}</a> </li>
{% endblock %}

{% block body -%}
    {{ parent() }}

    {% set myLocale = app.request.getLocale() %}

    <div class="header">
        <div class="container">
            <div class="row">

                <div class="col-md-8">&nbsp;</div>

                <div class="col-md-2 text-right">
                    <a  href="{{ path('backend_admin_property_invitations_export') }}" class="btn btn-primary-blue" style="width:100%" >{{ 'label_download_template'|trans }}</a>
                </div>
                <div class="col-md-2">
                    <a href="{{ path('backend_admin_property_invitations_import') }}"  class="btn btn-primary" style="width:100%">{{ 'label_import_properties'|trans }}</a>
                </div>

            </div>
            <br/>
            <div class="row">
                <div class="col-md-6">
                    <h3 class="header-title">{{ 'label_update'|trans }} {{ 'label_menu.property'|trans }}</h3>
                </div>

                {{ include('BackendAdminBundle:Complex:sessionComplex.html.twig') }}
            </div>
            <div class="row">
                <div class="col-md-12">
                    <blockquote>
                        <div class="col-md-11">
                            <p> {{ 'label_send_invitations_advice'|trans }}  </p>
                        </div>
                        <div class="col-md-1 text-right">
                            <i style="font-size:80px;" class="fa fa-question-circle" aria-hidden="true"></i>
                        </div>
                    </blockquote>
                </div>
            </div>
        </div>
    </div>


    <div class="container">
        <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">

            <!-- widget div-->
            <div>

                <!-- widget edit box -->
                <div class="jarviswidget-editbox">
                    <!-- This area used as dropdown edit box -->

                </div>

                <!-- end widget edit box -->

                <!-- widget content -->
                <div class="widget-body no-padding">

                    <div class="widget-body-toolbar">

                    </div>

                    <table id="log_table" class="table table-striped  table-hover fulltable">
                        <thead>
                            <tr>
                                <th>ID</th>
                                {#<th>{{ 'label_complex'|trans }}</th>#}
                                <th>{{ 'label_complex_sector'|trans }}</th>
                                <th>{{ 'label_property_number'|trans }}</th>

                                <th>{{ 'label_owner'|trans }}</th>
                                <th>{{ 'label_tenant'|trans }}</th>
                                <th>{{ 'label_start'|trans }}</th>
                                <th>{{ 'label_end'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>

                        {% if newContracts is defined %}
                            {% for contract in  newContracts%}
                                <tr>
                                    <td><a href="{{ path('backend_admin_property_detail', {id: contract.property.id}) }}">{{ contract.id }}</a> </td>
                                    <td>{{ contract.property.complexSector.name }}</td>
                                    <td>{{ contract.property.propertyNumber }}</td>
                                    <td>{{ contract.id }}</td>
                                    <td>{{ contract.id }}</td>
                                    <td>{{ contract.startDate|date("m/d/Y") }}</td>
                                    <td>{{ contract.id|date("m/d/Y") }}</td>

                                </tr>

                            {% endfor %}

                        {% endif %}

                        </tbody>
                    </table>

                    {# display navigation #}

                </div>
                <!-- end widget content -->



            </div>
            <!-- end widget div -->
        </div>
    </div>

    <script type="text/javascript">

        $(document).ready(function(){

            $('#log_table').DataTable( {
                /* Disable initial sort */
                "aaSorting": [],

                {% if myLocale == 'es' %}
                "language": {
                    "url": "{{ asset('bundles/pizotearkadmin/js/plugin/datatables/dataTables.spanish.lang') }}"
                }
                {% else %}
                "language": {
                    "infoFiltered": ""
                }
                {% endif %}

            } );

            $("#log_table_filter").show();

        });


    </script>

{% endblock %}

{% block extrascripts %}



{% endblock %}