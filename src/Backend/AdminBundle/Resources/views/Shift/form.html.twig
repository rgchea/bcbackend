<style>
    .input-group {
        z-index: 0;
    }
</style>

<div class="row">
	<article class="col-sm-12 col-md-12 col-lg-12 sortable-grid ui-sortable">

		<div data-widget-editbutton="false" data-widget-colorbutton="false" id="wid-id-2" class="jarviswidget jarviswidget-sortable" style="" role="widget">

			<header role="heading">
				<h2>{{ 'label_form'|trans }}</h2>
			</header>

			<!-- widget div-->
			<div role="content">

				<!-- widget edit box -->
				<div class="jarviswidget-editbox">
					<!-- This area used as dropdown edit box -->

				</div>
				<!-- end widget edit box -->

				<!-- widget content -->
				<div class="widget-body">

					{#<form id="backend_adminbundle_shift" action="{{path('backend_admin_shift_create')}}" method="POST" name="backend_adminbundle_shift">#}
                    {{ form_start(form) }}
                    {{ form_errors(form) }}

						<fieldset>

                        <div class="form-group col-md-6">
                            {{ form_label(form.hourFrom) }}
                            {{ form_errors(form.hourFrom) }}
                            {{ form_widget(form.hourFrom, { 'attr': {'class' : 'form-control' } }
                            ) }}
                        </div>
                        <div class="form-group col-md-6">
                                {{ form_label(form.hourTo) }}
                                {{ form_errors(form.hourTo) }}
                                {{ form_widget(form.hourTo, { 'attr': {'class' : 'form-control' } }
                                ) }}
                        </div>
                        <div class="form-group col-md-6">
                                {{ form_label(form.repeat) }}
                                {{ form_errors(form.repeat) }}
                                {{ form_widget(form.repeat, { 'attr': {'class' : 'form-control' } }
                                ) }}
                        </div>
                        <div class="form-group col-md-6">
                                {{ form_label(form.shiftDate)  }}
                                {{ form_errors(form.shiftDate) }}
                                {{ form_widget(form.shiftDate , { 'attr': {'class' : 'form-control' } }
                                ) }}
                        </div>
                        <div class="form-group col-md-6">
                                {{ form_label(form.overtime) }}
                                {{ form_errors(form.overtime) }}
                                {{ form_widget(form.overtime, { 'attr': {'class' : 'form-control' } }
                                ) }}
                        </div>
                        <div class="form-group col-md-6">
                                {{ form_label(form.flexibleHours) }}
                                {{ form_errors(form.flexibleHours) }}
                                {{ form_widget(form.flexibleHours, { 'attr': {'class' : 'form-control' } }
                                ) }}
                        </div>
                        <div class="form-group col-md-6">
                                {{ form_label(form.flexitour) }}
                                {{ form_errors(form.flexitour) }}
                                {{ form_widget(form.flexitour, { 'attr': {'class' : 'form-control' } }
                                ) }}
                        </div>
						<div class="clearfix"></div>
						<div class="form-group col-md-6">
							{{ form_label(form.complex) }}
							{{ form_errors(form.complex) }}
							{{ form_widget(form.complex, { 'attr': {'class' : 'form-control' } }
							) }}
						</div>
							<div class="hide">
                            {{ form_rest(form) }}
                        </div>

						</fieldset>

						<div class="form-actions">
							<a href="{{ path('backend_admin_shift_index') }}" class="btn btn-default"> {{ 'label_cancel'|trans  }} </a>

							<button type="submit" class="btn btn-primary">
								<i class="fa fa-save"></i>
								{{ 'label_save'|trans  }}
							</button>
						</div>

					<!--</form>-->
					{{ form_end(form) }}					

				</div>
				<!-- end widget content -->

			</div>
			<!-- end widget div -->

		</div>

		<div class="clearfix"></div>

	</article>
</div>

<script type="text/javascript" language="Javascript">

	$( document ).ready(function() {

            $('[name="shift"]').validate();

		$('[name="shift"]').on("submit", function(){
			//Code: Action (like ajax...)
			if($("[name='shift']").valid()){
				$('#pizote_spinner').show();
				return true;

			}
			else{

				return false;
			}

		});

	});


</script>