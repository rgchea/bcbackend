    <script type="text/javascript" language="JavaScript">

        $( document ).ready(function() {


            $("#event_date").change(function(){
                getCommonAreaAvailability();
            });
            $("#area_select").change(function(){
                getCommonAreaAvailability();
                getCost();
            });

            //i am ready
            getCost();


            $("#sector_select").change(function () {
                changeProperties("{{ path('backend_admin_complex_sector_list_properties') }}", "property_select", $("#sector_select").val() );
            });

            changeProperties("{{ path('backend_admin_complex_sector_list_properties') }}", "property_select", $("#sector_select").val() );


            $("#bookingForm").validate();


            $("#sector_select").rules("add", {required:true});
            $("#property_select").rules("add", {required:true});
            $("#area_select").rules("add", {required:true});
            $("#event_date").rules("add", {required:true});
            $("#cost").rules("add", {required:true, number: true});
            $("#discount").rules("add", {required:true, number: true});
            $("#amount_paid").rules("add", {required:true, number: true});
            $('[name="time"]').rules("add", {required:true});






        });


        $('[name="bookingForm"]').on("submit", function(){
            //Code: Action (like ajax...)
            total = parseFloat($("#cost").val()) - ( parseFloat($("#discount").val()) + parseFloat($("#amoun_paid").val()) );

            if(total > 0 ){
                alert("{{ 'label_cancel_total'|trans }}");
                $("#amount_paid").focus();
                return false;

            }


            if(timeSet != 0){
                if($("[name='bookingForm']").valid()){
                    $('#pizote_spinner').show();
                    return true;
                }
                else{
                    return false;
                }

            }
            else{
                alert("{{ 'label_time_required'|trans }}");
                return false;
            }
        });

        var availabilityUrl = "{{ path('backend_admin_common_area_reservation_availability') }}";
        var timeSet = 0;


        function getCommonAreaAvailability(){

            timeSet = 0;

            $("#pizote_spinner").show();

            $.ajax({
                type:"POST",
                dataType:"json",
                url: availabilityUrl,
                data: { 'area_id': $("#area_select").val(), "event_date": $("#event_date").val()},
                success:function(data){

                    console.log(data);

                    var items = [];

                    $.each( data, function( key, val ) {
                        items.push( "<label class='radio-inline' ><input type='radio' checked='checked' name='time' value='" + val.hour + "'>" + val.hour + "</label><br/>");
                        timeSet++;
                    });

                    $("#divTime").html(items);
                    $("#pizote_spinner").hide();
                    //alert(timeSet);

                }
            });
        }

        var costUrl = "{{ path('backend_admin_common_area_reservation_get_cost') }}";
        function getCost(){

            //backend_admin_common_area_reservation_get_cost
            $("#pizote_spinner").show();

            $.ajax({
                type:"POST",
                dataType:"json",
                url: costUrl,
                data: { 'area_id': $("#area_select").val()},
                success:function(data){

                    console.log(data);
                    $("#cost").val(Number.parseFloat(data.cost).toFixed(2));

                    $("#pizote_spinner").hide();

                }
            });

        }


    </script>