{% extends 'BackendAdminBundle::layout.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li> <a href="{{ path('backend_admin_property_contract_index') }}"></a>{{ 'label_menu.property_contract'|trans }} </li>
{% endblock %}

{% block title %}
    {{ 'label_menu.property_contract'|trans }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}


{% block body -%}
    {{ parent() }}
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">

            </div>
            {% if app.user.role.name == "ADMIN" %}
            <div class="col-xs-12 col-sm-5 col-md-5 col-lg-8">
                <a class="pull-right btn btn-primary " href="{{ path('backend_admin_property_contract_new') }}">
                    {{ 'label_create_new'|trans }} {{ 'label_property_contract'|trans }}
                </a>
            </div>
            {% endif %}
        </div>

        <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
            <header>
                <h2> {{ 'label_menu.property_contract'|trans }}</h2>
            </header>

            <!-- widget div-->
            <div>

                <!-- widget edit box -->
                <div class="jarviswidget-editbox">
                    <!-- This area used as dropdown edit box -->

                </div>

                <!-- end widget edit box -->

                <!-- widget content -->
                <div class="widget-body no-padding">

                    <div class="widget-body-toolbar">

                    </div>

                    <table id="dt_table" class="table table-striped  table-hover">
                        <tfoot class="dt_tfoot">
                            <tr>
                                <th class="pizoteTableID">ID</th>
                                <th>{{ 'label_complex'|trans }}</th>
                                <th>{{ 'label_complex_sector'|trans }}</th>
                                <th>{{ 'label_property'|trans }}</th>
                                <th>{{ 'label_active'|trans }}</th>
                                <th>{{ 'label_price'|trans }}</th>
                                <th>&nbsp;</th>

                            </tr>
                        </tfoot>
                        <thead>
                            <tr>
                                {# sorting of properties based on query components #}
                                <th class="pizoteTableID">ID</th>
                                <th>{{ 'label_complex'|trans }}</th>
                                <th>{{ 'label_complex_sector'|trans }}</th>
                                <th>{{ 'label_property'|trans }}</th>
                                <th>{{ 'label_active'|trans }}</th>
                                <th>{{ 'label_price'|trans }}</th>
                                <th>{{ 'label_actions'|trans }}</th>
                            </tr>

                        </thead>
                        <tbody></tbody>

                    </table>
                    {# display navigation #}

                </div>
                <!-- end widget content -->



            </div>
            <!-- end widget div -->
        </div>
    </div>
    <script type="text/javascript">

        var table;
        {% set myLocale = app.request.getLocale() %};

        function fetchData(){

            table  = $('#dt_table').DataTable({
                "columnDefs": [

                    // These are the column name variables that will be sent to the server
                    { "name": "id",   "targets": 0 },
                    { "name": "complex",   "targets": 1 },
                    { "name": "sector",   "targets": 2 },
                    { "name": "property",  "targets": 3 },
                    { "name": "active",  "targets": 4 },
                    { "name": "price",  "targets": 5 },
                    { "name": "actions",  "targets": 6 },

                ],
                // Server-side parameters
                "processing": true,
                "serverSide": true,
                // Ajax call
                "ajax": {
                    "url": "{{ path('property_contract_list_datatables') }}",
                    "type": "POST",
                    //dataType: "html"
                },
                // Classic DataTables parameters
                "paging" : true,
                "info" : true,
                "searching": true,
                "pageLength": 10,
                "order": [[1, 'asc']],
                {% if myLocale == 'es' %}
                "language": {
                    "url": "{{ asset('bundles/pizotearkadmin/js/plugin/datatables/dataTables.spanish.lang') }}"
                }
                {% else %}
                "language": {
                    "infoFiltered": ""
                }
                {% endif %}




            });

        }

        $(document).ready(function(){

            // Add a text input to each footer cell
            var pos = 1;
            $('#dt_table tfoot th').each( function () {
                var title = $(this).text();
                if(pos != 7){//columna Actions
                    $(this).html( "<input id='input" + pos + "' type='text' class='form-control' style='font-family:Arial, FontAwesome; width:100%'/>" );
                }

                pos ++;
            });


            fetchData();

            // Apply the search
            pos = 1;
            table.columns().every( function () {
                var that = this;

                $("#input"+pos).on( 'keyup change', function () {
                    if ( that.search() !== this.value )
                    {
                        that.search( this.value ).draw();
                    }
                });
                pos++;
            });


        });

    </script>


{% endblock %}


